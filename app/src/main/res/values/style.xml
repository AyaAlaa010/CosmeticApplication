<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_button_style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:backgroundTint">@color/PrimaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="fontWeight">700</item>
    </style>


    <style name="regular_text_view_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="regular_text_bold_style" parent="regular_text_view_style">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>

    </style>

    <style name="medium_text_bold_style" parent="regular_text_view_style">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>

    </style>



</resources>